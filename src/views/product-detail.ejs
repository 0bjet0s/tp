<!DOCTYPE html>
<html lang="es">

<%-include('./partials/head', {titulo: product.name})%>

<body class="pd">
    <%- include('./partials/header1')%>
    <main>
        <section class="flexpd-row">
            <section class="detalle-izq">
                <article class="pd">
                    <%- include('./partials/categories')%>


                   
                </article>
            </section>
            <section class="pd-container flexpd ">

                <div class="flexpd-row">
                    
                    <iframe class="imgpd" src="https://www.youtube.com/embed/5Fgq4Osh6XQ" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <iframe src="/design/images/products/<%= product.trailer %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                    
                     <!--<img class="imgpd" src="/design/images/products/<%= product.image %> ">-->
                </div>

            </section>
            <section class="pd-container flexpd">
                <div class="flexpd-item-pd-container">
                    <article class="pd">
                        <h3><%= product.name %> </h3>
                        <hr>
                        <h3>Sinopsis</h3>
                        <p class="pd"><%= product.description %> <p>

                       <!-- <div class="infoprod">-->
                            <h4>Reparto</h4>
                            <p><%= product.reparto %></p>
                             <h4>Direccion</h4>
                            <p><%= product.direction %></p>

                        </div>
                        <div class="data-articulopd flexpd">
                        <span><h5>Agregar al carrito</h5></span>
                        <a href="carrito.ejs"><i class="fas fa-shopping-cart"                                            style="width: 30%;height: 30%;"></i></a>
                        </div>
                    </article>
                </div>
            </section>
        </section>
        
        <section class="extras-flexpd">
           <h3>RELACIONADOS</h3>
        <%- include ("./partials/slider")%>
        <section class="container-articles flex">

            <% peliculas.forEach(pelicula=> { %>
                <article class="article flex">
                    <div class="img-container flex">
                        <button id="<%= pelicula.id %> ">
                            <img src="./design/images/icons/play-circle-regular.png" alt="
                               <%= pelicula.name %>">
                        </button>
                        <img src="./design/images/products/<%= pelicula.image %> " alt="articulo">
                    </div>
                    <div class="data-article flex">
                        <a href="/products/detail/<%= pelicula.id %>">
                            <h4 class="titulo noun">
                                <%= pelicula.name %>
                            </h4>
                            
                        </a>
                    </div>
                </article>
                <% }) %>

        </section>

            </section>
    </main>
    <%- include ("./partials/footer1")%>


<script src="/js/productDetail.js"></script>
    <script src="/js/product-slider.js"></script>
    <!-- JavaScript -->
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
</body>

</html>