<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Productos</title>
  <link rel="stylesheet" href="/public/css/products.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <title>Document</title>
</head>

<body>
  <header>

    <div class="container-izquierda">
      <div class="header_logo">

        <a href="#" ref="volver"><img src="/design/images/icons/logo.webp"></a>
      </div>

  </header>
  <main>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nombre</th>
          <th scope="col">Genero</th>
          <th scope="col">Precio</th>
        </tr>
      </thead>
      <tbody>
        <% peliculas.forEach(peli => { %>
        <tr class="table-active">
          <th scope="row"><%= peli.id %> </th>
          <td><%= peli.name %> </td>
          <td><%= peli.category %> </td>
          <td>$ <%= peli.price %> </td>
          <td>
            <a href="/admin/products/edit/<%= peli.id %>"><button type="button" class="btn btn-success"><i
                  class="fas fa-pencil-alt"></i></button></a>
            <form action="/admin/products/<%= peli.id %>/dlt?_method=DELETE" method="post"> <button type="submit"
                class="btn btn-danger"><i class="fas fa-trash"></i></button></a>
            </form>
          </td>
        </tr>
        <% }) %>

      </tbody>
    </table>

    </maing>

</body>

</html>