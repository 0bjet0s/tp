<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head', {titulo})  %>

<body>

    <!-- header -->
    <%- include('./partials/header2')  %>
    <!--  -->

    <main class="home-container flex">
        <!-- banner -->
        <div class="banner">
            <img src="./design/images/products/banner-carrousel.png" alt="banner">
        </div>

        <!-- seccion principal -->
        <div class="main-section flex">
            <!-- peliculas -->
            <section class="container-articles flex">

                <% peliculas.forEach(pelicula => { %>
                    <a href="/products/detail/<%= pelicula.id %>">
                        <article class="article flex">

                        <div class="img-container">
                            <img src="./design/images/products/<%= pelicula.imagen %> " alt="articulo">
                        </div>
                        <div class="data-article flex">
                            <h4 class="titulo noun"><%= pelicula.nombre %></h4>
                            <div class="footer-article flex">
                                <i class="far fa-heart"></i>
                                <h6 class="precio">$ <%= pelicula.precio %> </h6>
                            </div>
                        </div>
                    </article>
                    </a>
                
                <% }) %>

            </section>

            <!-- navbar -->
            <div class="container-nav">
                <nav class="nav-bar flex">
                    <div class="contain-category">
                        <div class="title">
                            <h2>CATEGORIAS</h2>
                        </div>
                        <ul class="list">
                            <% generos.forEach(genero => { %>
                            <li><a href="peliculas/:<%= genero.nombre %>"></a><%= genero.nombre %></li>
                            <% }) %>
                            <!-- <li><a href="#"><span>Marvel</span></a></li>
                            <li><a href="#"><span>DC</span></a></li>
                            <li><a href="#"><span>Estrenos</span></a></li>
                            <li><a href="#"><span>Proximamente</span></a></li>
                            <li><a href="#"><span>Animadas</span></a></li> -->
                        </ul>
                    </div>

                    <div class="contain-category">
                        <div class="title">
                            <h2>a√±o</h2>
                        </div>
                        <ul class="list">
                            <% anios(peliculas).forEach(anio => { %>
                            <li><a href="#"><%= anio %> </a></li>
                            <% }) %>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>

    </main>

</body>

</html>